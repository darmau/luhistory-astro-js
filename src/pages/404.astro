---
import Layout from "@/layouts/Layout.astro";---

<Layout title = "Page not found">
  <main class="max-w-8xl mx-auto grid grid-cols-12 gap-8 my-40">
    <h1 class="col-start-4 col-span-6 font-serif font-bold text-9xl text-neutral-900">404</h1>
    <p class="col-start-4 col-span-6 font-serif font-semibold text-2xl text-neutral-900 opacity-50">Page not found.</p>
    <a
      href="/"
      class="col-start-4 col-span-6 font-serif text-2xl text-neutral-900"
      data-astro-reload
    >Homepage</a>
  </main>
</Layout>
