---
import { sanityClient } from "sanity:client";
import findNextAndLast from "../../functions/next-and-last";
const archiveList =
  await sanityClient.fetch(`*[_type == 'article' && defined(slug) && defined(publishDate) && defined(category)]|order(publishDate desc) {
  title,
  "slug": slug.current,
}`);
const { slug } = Astro.props;
const currentIndex = findNextAndLast(archiveList, slug);
---

<!--本组件为显示当前展览的后一个文章-->{
  archiveList.length > 1 && currentIndex < archiveList.length - 1 && (
    <div class="col-start-1 lg:col-start-2 col-end-12 grid grid-cols-10 gap-0 md:gap-4 mt-8 lg:mt-16 pt-8 lg:pt-16 border-t border-neutral-900 border-opacity-20">
      <h4 class="col-start-1 lg:col-start-3 col-span-8 font-sans font-normal text-base text-neutral-900">
        Next
      </h4>
      <a
        href={`/collection/detail/${archiveList[currentIndex + 1].slug}`}
        data-astro-prefetch="hover"
        class="col-start-1 lg:col-start-3 col-span-12 lg:col-span-8 flex gap-8 justify-between items-center text-3xl/12 lg:text-6xl/24 font-serif font-medium no-underline hover:underline text-neutral-900"
      >
        <span
          class="line-clamp-2"
          title={archiveList[currentIndex + 1].title}
        >
          {archiveList[currentIndex + 1].title}
        </span>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="currentColor"
          class="w-5 lg:w-12 h-5 lg:h-12"
        >
          <path
            fill-rule="evenodd"
            d="M12.97 3.97a.75.75 0 0 1 1.06 0l7.5 7.5a.75.75 0 0 1 0 1.06l-7.5 7.5a.75.75 0 1 1-1.06-1.06l6.22-6.22H3a.75.75 0 0 1 0-1.5h16.19l-6.22-6.22a.75.75 0 0 1 0-1.06Z"
            clip-rule="evenodd"
          />
        </svg>
      </a>
    </div>
  )
}
