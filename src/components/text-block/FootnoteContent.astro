---
import { PortableText } from "astro-portabletext";
import PTLink from "./PTLink.astro";
import PTInternalLink from "./PTInternalLink.astro";
import PTUnderline from "./PTUnderline.astro";
import PTStrong from "./PTStrong.astro";
import PTem from "./PTem.astro";

export interface Props {
  note: any;
  index: number;
  id: string;
}

const { note, index, id } = Astro.props as Props;
---

<div class="footnote-content" id={`footnote-${id}`}>
  <span class="footnote-number">
    <a href={`#footnote-ref-${id}`} class="footnote-back-link">
      {index}.&nbsp;
    </a>
  </span>
  <span class="footnote-text">
    <PortableText 
      value={note}
      components={{
        mark: {
          link: PTLink as any,
          internalLink: PTInternalLink as any,
          strong: PTStrong as any,
          em: PTem as any,
          underline: PTUnderline as any,
        }
      }}
    />
  </span>
</div>

<style is:global>
  .footnote-content {
    display: flex;
    align-items: flex-start;
    padding: 8px 0;
  }
  
  .footnote-number {
    font-family: monospace;
    font-size: 16px;
    line-height: 24px;
    flex-shrink: 0;
    margin-right: 4px;
    color: #171717;
  }
  
  .footnote-back-link {
    color: #171717;
    text-decoration: none !important;
    padding: 2px 4px;
    border-radius: 2px;
    transition: all 0.2s ease;
  }
  
  .footnote-back-link:hover {
    background-color: #f5f5f5;
  }
  
  .footnote-text {
    flex: 1;
    font-family: var(--font-serif);
    font-size: 16px;
    line-height: 24px;
    color: #171717;
  }
  
  /* 覆盖注释内 PortableText 的默认样式 */
  .footnote-text p {
    font-family: var(--font-serif);
    font-size: 16px !important;
    line-height: 24px !important;
    color: #171717;
    margin: 0 !important;
    padding: 0 !important;
  }
  
  .footnote-text a {
    color: #171717;
    text-decoration: underline;
    text-decoration-thickness: 1px;
    text-underline-offset: 4px;
    text-decoration-color: #a3a3a3;
  }
  
  .footnote-text a:hover {
    text-decoration-color: #171717;
    text-decoration-thickness: 2px;
    transition: all 0.3s ease-in-out;
  }
  
  .footnote-text strong {
    font-weight: 600;
  }
  
  .footnote-text em {
    font-style: italic;
  }
</style>
