---
import { PortableText } from "astro-portabletext";
import PTLink from "./PTLink.astro";
import PTInternalLink from "./PTInternalLink.astro";
import PTUnderline from "./PTUnderline.astro";
import PTStrong from "./PTStrong.astro";
import PTem from "./PTem.astro";

export interface Props {
  note: any;
  index: number;
  id: string;
}

const { note, index, id } = Astro.props as Props;
---

<div class="footnote-content" id={`footnote-${id}`}>
  <span class="footnote-number">
    <a href={`#footnote-ref-${id}`} class="footnote-back-link">
      {index}.&nbsp;
    </a>
  </span>
  <span class="footnote-text">
    <PortableText 
      value={note}
      components={{
        mark: {
          link: PTLink as any,
          internalLink: PTInternalLink as any,
          strong: PTStrong as any,
          em: PTem as any,
          underline: PTUnderline as any,
        }
      }}
    />
  </span>
</div>

<style>
  .footnote-content {
    display: flex;
    align-items: flex-start;
    padding: 8px 0;
  }
  
  .footnote-number {
    font-family: monospace;
    font-size: 16px;
    line-height: 24px;
    flex-shrink: 0;
    margin-right: 4px;
    color: #171717;
  }
  
  .footnote-back-link {
    color: #171717;
    text-decoration: none;
    padding: 2px 4px;
    border-radius: 2px;
    transition: all 0.2s ease;
  }
  
  .footnote-back-link:hover {
    background-color: #f5f5f5;
    text-decoration: underline;
  }
  
  .footnote-text {
    flex: 1;
    font-family: var(--font-serif);
    font-size: 16px;
    line-height: 24px;
    color: #171717;
  }
</style>
