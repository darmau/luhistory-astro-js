---
type RelatedExhibition = {
  title: string;
  slug: string;
  date?: string | null;
  city?: string | null;
};

const {exhibitions = []} = Astro.props as { exhibitions?: RelatedExhibition[] };
---

<div class = "col-start-1 col-span-8 my-4 lg:my-16">
  <hgroup class="my-12">
    <h2 class = "font-serif font-bold text-neutral-900 text-3xl md:text-5xl">Exhibitions</h2>
  </hgroup>
  <ul class="space-y-8 pl-0 list-none">
    {exhibitions.map((exhibition) => {
      const exhibitionYear = exhibition.date?.split('-')[0] ?? '';
      const exhibitionCity = exhibition.city ?? '';
      return (
        <li>
          <a
            class="no-underline"
            href={`/exhibition/detail/${exhibition.slug}`}>
            <h3 class = "font-serif font-bold text-3xl text-neutral-900 mb-0 md:mb-2">{exhibition.title}</h3>
            <small class="font-sans text-base text-neutral-900 opacity-50">
              <span>{exhibitionYear}</span>
              Â·
              <span>{exhibitionCity}</span>
            </small>
          </a>
        </li>
      );
    })}
  </ul>
</div>
