---
import type { PageTitleProps } from "@/types";

const {
  title,
  subtitle,
  bgWhite = true,
  remoteImg,
  localImg = '/images/cover.jpg',
} = Astro.props as PageTitleProps;

// 根据title的长度，返回一个4-9之间的数字
function getTextSize(size: number) {
  if (size < 16) {
    return 'text-6xl md:text-9xl';
  } else if (size < 32) {
    return 'text-6xl md:text-8xl';
  } else if (size < 48) {
    return 'text-5xl md:text-7xl';
  } else {
    return 'text-4xl md:text-6xl';
  }
}

const titleSize = getTextSize(title.length);

const bgUrl = remoteImg ? `${remoteImg}?w=1440` : localImg;
---

<header>
  {bgWhite === true ?
    <hgroup
      class = "w-full max-w-8xl mx-auto z-10 px-4 pt-12 lg:p-0 lg:grid lg:grid-cols-12 md:gap-8 md:pt-12 md:pb-10"
    >
      <h1
        class = {`col-start-4 col-end-12 font-title font-bold text-neutral-900 ${titleSize} leading-tight`}
      >{title}</h1>
      {subtitle &&
        <h2
          class = "col-start-4 col-end-12 font-title font-semibold text-lg md:text-2xl text-neutral-900 my-4 md:my-8"
        >{subtitle}</h2>
      }
    </hgroup>
      :
    <hgroup
      class = "bg-img"
      style = {`
        background-image: url(${bgUrl});
        background-size: cover;
      `}
    >
      <div class = "w-full px-4 max-w-8xl mx-auto flex flex-col lg:grid lg:grid-cols-12 lg:px-8 z-10">
        <h1
          class = {`col-start-1 md:col-start-4 col-end-12 text-white font-title font-bold ${titleSize} leading-snug`}
        >{title}</h1>
        {subtitle &&
          <h2
            class = "col-start-1 md:col-start-4 col-end-12 font-title font-semibold text-lg md:text-2xl text-white my-8"
          >{subtitle}</h2>
        }
      </div>
      <div class = "overlay"></div>
    </hgroup>
  }
</header>

<style>
  .bg-img {
    width: 100vw;
    height: 800px;
    display: flex;
    align-items: center;
    position: relative;
  }

  @media (max-width: 1024px) {
    .bg-img {
      height: 640px;
    }
  }

  @media (max-width: 768px) {
    .bg-img {
      height: 500px;
      justify-content: center;
    }
  }

  @media (max-width: 480px) {
    .bg-img {
      height: 320px;
    }
  }

  .overlay {
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.35);
    position: absolute;
    top: 0;
    z-index: 1;
  }
</style>
