---
import { sanityClient } from "sanity:client";
import ExhibitionSlider from "./slider/ExhibitionSlider.tsx";
import type { ExhibitionItem } from "@/types";
import { buildRemoteImageSetOrNull } from "@/utils/remoteImage";

const exhibitionsRaw = await sanityClient.fetch<ExhibitionItem[]>(`
  *[_type == 'exhibition' && defined(dateRange) && defined(cover)] | order(dateRange.startDate desc)[0...5]{
    title,
    "slug": slug.current,
    "year": dateRange.startDate,
    "city": location.city,
    "cover": {
      "url": cover.asset->url,
      "caption": cover.caption
    }
  }`);

const exhibitionWidths = [320, 480, 720, 960];
const exhibitionSizes = "(max-width: 1023px) 100vw, calc(50vw - 3rem)";

const exhibitionData = await Promise.all(
  exhibitionsRaw.map(async (item) => {
    if (!item.cover?.url) {
      return { ...item, coverImage: null } satisfies ExhibitionItem;
    }

    const coverImage = await buildRemoteImageSetOrNull({
      src: item.cover.url,
      alt: item.cover.caption || item.title,
      widths: exhibitionWidths,
      sizes: exhibitionSizes,
    });

    if (!coverImage) {
      console.warn("Falling back to remote Sanity image", { slug: item.slug });
    }

    return { ...item, coverImage } satisfies ExhibitionItem;
  })
);
---

<div
  class="col-start-1 col-span-12 mb-8 p-4 sm:p-0 sm:col-start-2 sm:col-span-10 lg:mb-40"
>
  <hgroup
    class="flex justify-between items-baseline text-neutral-900 mb-8 md:mb-20"
  >
    <h2 class="font-bold text-3xl md:text-5xl font-serif">Exhibitions</h2>
    <div class="flex items-center gap-2">
      <a
        href="/exhibition"
        class="text-lg md:text-2xl font-thin font-serif"
        data-astro-prefetch="viewport">View more&nbsp;&nbsp;â†’</a
      >
    </div>
  </hgroup>
  <div class="w-full">
    <div class="overflow-visible">
      {
        exhibitionData && (
          <ExhibitionSlider client:visible exhibitions={exhibitionData} />
        )
      }
    </div>
  </div>
</div>

<style>
  .cover-img {
    width: 320px;
    height: 213px;
  }

  @media (min-width: 768px) {
    .cover-img {
      width: 528px;
      height: 352px;
    }
  }
</style>
